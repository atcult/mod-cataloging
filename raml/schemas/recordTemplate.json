{
  "$schema" : "http://json-schema.org/draft-04/schema#",
  "title": "RecordTemplate",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "name" : {
      "type": "string"
    },
    "group" : {
      "type": "string"
    },
    "leader" : {
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "minLength": 3,
          "maxLength": 3
        },
        "value": {
          "type": "string"
        }
      }
    },
    "controlFields": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "minLength": 3,
            "maxLength": 3
          },
          "value": {
            "type": "string"
          }
        }
      }
    },
    "variableFields": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "categoryCode": {
            "type": "string"
          },
          "headingTypeCode": {
            "type": "string"
          },
          "itemTypeCode": {
            "type": "string"
          },
          "functionCode": {
            "type": "string"
          },
          "code": {
            "type": "string",
            "minLength": 3,
            "maxLength": 3
          },
          "ind1" : {
            "type": "integer",
            "minimum": 0,
            "maximum": 9
          },
          "ind2" : {
            "type": "integer",
            "minimum": 0,
            "maximum": 9
          },
          "value": {
            "type": "string"
          },
          "subfields": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "string",
                  "pattern": "[a-z|0-9]"
                },
                "value": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
