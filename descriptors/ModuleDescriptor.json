{
  "id": "${artifactId}-${version}",
  "name": "MARCcat Import Module",
  "requires": [
    {
      "id": "marc-record-manager",
      "version": "1.0"
    }
  ],
  "provides": [
    {
      "id": "marccat",
      "version": "1.0",
      "handlers": [
        {
          "methods": ["GET"],
          "pathPattern": "/search",
          "permissionsRequired": [
            "marccat.records.collection.get"
          ]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/searchVertical",
          "permissionsRequired": []
        }
      ]
    },
    {
      "id": "_tenant",
      "version": "1.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/_/tenant"
        },
        {
          "methods": [
            "DELETE"
          ],
          "pathPattern": "/_/tenant"
        }
      ]
    }
  ],
  "permissionSets": [
    {
      "permissionName": "marccat.records.collection.get",
      "displayName": "MARCcat - get records collection",
      "description": "Get record collection"
    },
  ],
  "launchDescriptor": {
    "dockerImage": "${artifactId}:${version}",
    "dockerArgs": {
      "HostConfig": { "PortBindings": { "8081/tcp":  [{ "HostPort": "%p" }] } }
    },
    "dockerPull" : false
  }
}
